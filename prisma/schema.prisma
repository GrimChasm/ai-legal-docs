// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  drafts            Draft[]
  versions          Version[]
  shares            Share[]
  comments          Comment[]
  collaborators     Collaborator[]
  signatureRequests SignatureRequest[]
  templates         Template[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Draft {
  id         String   @id @default(cuid())
  userId     String
  contractId String
  values     String   // JSON string
  markdown   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  versions        Version[]
  shares          Share[]
  comments        Comment[]
  collaborators   Collaborator[]
  signatureRequests SignatureRequest[]

  @@index([userId])
  @@index([contractId])
}

model Version {
  id        String   @id @default(cuid())
  draftId   String
  userId    String
  markdown  String
  createdAt DateTime @default(now())

  draft Draft @relation(fields: [draftId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([userId])
}

model Share {
  id        String   @id @default(cuid())
  draftId   String
  userId    String
  email     String
  role      String   @default("viewer") // viewer, editor, commenter
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?

  draft Draft @relation(fields: [draftId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([token])
}

model Comment {
  id        String   @id @default(cuid())
  draftId   String
  userId    String
  content   String
  x         Float?
  y         Float?
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  draft Draft @relation(fields: [draftId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([draftId])
}

model Collaborator {
  id        String   @id @default(cuid())
  draftId   String
  userId    String
  role      String   @default("viewer")
  joinedAt  DateTime @default(now())

  draft Draft @relation(fields: [draftId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([draftId, userId])
  @@index([draftId])
}

model SignatureRequest {
  id            String   @id @default(cuid())
  draftId       String
  userId        String
  provider      String   // docusign, hellosign
  envelopeId    String?
  status        String   @default("pending") // pending, sent, signed, declined
  signerEmail   String
  signerName    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  draft Draft @relation(fields: [draftId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([envelopeId])
}

model Template {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  formSchema  String   // JSON string
  templateCode String  // JavaScript template function code
  category    String?
  documentType String?
  industry    String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublic])
}
