generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  password      String
  image         String?
  documentStyle String?   // JSON string of DocumentStyle preferences
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  accounts      Account[]
  drafts        Draft[]
  sessions      Session[]
  Template      Template[]
  SignatureRequests SignatureRequest[] @relation("SignatureRequests")
  SentSignatureInvites SignatureInvite[] @relation("SentSignatureInvites")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Draft {
  id                String             @id @default(cuid())
  userId            String
  contractId        String
  values            String
  markdown          String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  collaborators     Collaborator[]
  comments          Comment[]
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  shares            Share[]
  signatureRequests SignatureRequest[]
  signatureInvites  SignatureInvite[] @relation("SignatureInvites")
  signatures        Signature[]
  versions          Version[]

  @@index([userId])
  @@index([contractId])
}

model Version {
  id               String   @id @default(cuid())
  draftId          String
  versionNumber    Int
  formValues       String
  generatedContent String?
  selectedStyle    String?
  changeNote       String?
  createdAt        DateTime @default(now())
  createdBy        String
  draft            Draft    @relation(fields: [draftId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([createdBy])
}

model Share {
  id         String    @id @default(cuid())
  draftId    String
  shareToken String    @unique
  permission String    @default("view")
  sharedBy   String
  sharedWith String?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())
  Comment    Comment[]
  draft      Draft     @relation(fields: [draftId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([sharedBy])
  @@index([shareToken])
}

model Comment {
  id          String   @id @default(cuid())
  draftId     String
  shareId     String?
  content     String
  authorName  String
  authorEmail String?
  authorId    String?
  position    String?
  resolved    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  draft       Draft    @relation(fields: [draftId], references: [id], onDelete: Cascade)
  Share       Share?   @relation(fields: [shareId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([authorId])
  @@index([shareId])
}

model Collaborator {
  id         String   @id @default(cuid())
  draftId    String
  userId     String?
  email      String?
  name       String
  permission String   @default("view")
  lastActive DateTime @default(now())
  draft      Draft    @relation(fields: [draftId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([draftId, email])
  @@index([draftId, userId])
  @@index([userId])
}

model SignatureRequest {
  id                String    @id @default(cuid())
  draftId           String
  provider          String    @default("docusign")
  status            String    @default("draft")
  externalId        String?
  signers           String
  message           String?
  subject           String?
  expiresAt         DateTime?
  completedAt       DateTime?
  signedDocumentUrl String?
  errorMessage      String?
  createdBy         String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  draft             Draft     @relation(fields: [draftId], references: [id], onDelete: Cascade)
  user              User      @relation("SignatureRequests", fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([status])
  @@index([externalId])
  @@index([createdBy])
}

model SignatureInvite {
  id            String   @id @default(cuid())
  draftId       String
  senderUserId  String
  recipientName String
  recipientEmail String
  token         String   @unique
  status        String   @default("pending") // "pending" | "signed" | "declined"
  signedAt      DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  draft         Draft    @relation("SignatureInvites", fields: [draftId], references: [id], onDelete: Cascade)
  user          User     @relation("SentSignatureInvites", fields: [senderUserId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([senderUserId])
  @@index([token])
  @@index([recipientEmail])
}

model Template {
  id           String   @id @default(cuid())
  userId       String
  title        String
  description  String?
  formSchema   String
  templateCode String
  category     String?
  documentType String?
  industry     String?
  isPublic     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isPublic])
  @@index([userId])
}

model Signature {
  id            String   @id @default(cuid())
  draftId       String
  signerName    String
  signerEmail   String
  signatureData String   // Base64 encoded image or typed text
  signatureType String   // "drawn" | "typed" | "uploaded"
  role          String   @default("creator") // "creator" | "counterparty"
  position      String?  @default("bottom") // "bottom" | "custom"
  customY       Int?     // Custom Y position in points (for custom positioning)
  ipAddress     String?
  createdAt     DateTime @default(now())
  draft         Draft    @relation(fields: [draftId], references: [id], onDelete: Cascade)

  @@index([draftId])
  @@index([signerEmail])
}
